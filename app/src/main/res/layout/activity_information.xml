<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.neighbour_list.InformationActivity"
    android:orientation="vertical"
    android:background="@color/lightGrey">

    <ImageView
        android:id="@+id/backgroundId"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/backGroundIdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/info"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        tools:text="Caroline"
        android:textSize="25sp"
        android:textColor="@color/blanc"/>

    <android.support.v7.widget.CardView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundId"
        android:background="@color/blanc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="22sp"
                android:textColor="@color/darkGrey"
                tools:text=" Caroline"/>

            <TextView
                android:id="@+id/logo_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_position"
                android:drawableTint="@color/colorAccent"
                android:drawablePadding="4dp"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@color/darkGrey"
                tools:text=" Saint Pierre du mont à 5Km"/>

            <TextView
                android:id="@+id/logo_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone"
                android:drawableTint="@color/colorAccent"
                android:drawablePadding="4dp"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@color/darkGrey"
                tools:text=" +33 6 86 57 90 14"/>

            <TextView
                android:id="@+id/logo_world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_world"
                android:drawableTint="@color/colorAccent"
                android:drawablePadding="4dp"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@color/darkGrey"
                tools:text="www.facebook.fr/Caroline"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardAboutMe"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textAboutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:background="@color/blanc"
                android:text="@string/about"
                android:textColor="@color/darkGrey"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textAboutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/blanc"
                tools:text="Bonjour! Je souhaiterai faire de la marche nordique. Pas initiée, je cherche une ou plusieurs personnes succeptible de m'accompagner! J'aime les jeux de cartes tels la belote ou le tarot."
                android:textColor="@color/darkGrey"
                android:textSize="14sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/favoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:backgroundTint="@color/blanc"
        android:src="@drawable/ic_star_white_24dp"
        android:tint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="@+id/backgroundId"
        app:layout_constraintTop_toTopOf="@+id/backgroundId"
        android:drawable="@drawable/ic_star_border"
        android:state_pressed="false"/>







</android.support.constraint.ConstraintLayout>

